<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="8">

        <ImageView
            android:id="@+id/record_iv_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/record_tv_all"
            style="@style/record_swiper_style"
            android:layout_weight="2"
            android:text="全部标注" />

        <TextView
            android:id="@+id/record_tv_finish"
            style="@style/record_swiper_style"
            android:layout_weight="2"
            android:text="已确认" />

        <TextView
            android:id="@+id/record_tv_wait"
            style="@style/record_swiper_style"
            android:layout_weight="2"
            android:text="未确认" />

        <ImageView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lin_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8">

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/line_view"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="2"
            android:background="@color/red" />

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/record_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>